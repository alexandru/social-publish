# Environment for local backend development.
# Social integrations are user-scoped now and configured from /account settings.

# Database
export DB_PATH="/tmp/social-publish.kt/socialpublish.db"

# Server
export HTTP_PORT=3000
export BASE_URL="http://localhost:3000"
# If you want to serve static files from a directory, set this (can be provided multiple times):
# export STATIC_CONTENT_PATH=

# Auth (required)
export JWT_SECRET="dev-jwt-secret-change-me"

# Files storage (required)
export UPLOADED_FILES_PATH="/tmp/social-publish.kt/uploads"

# Notes:
# - STATIC_CONTENT_PATH is optional and can be repeated to serve multiple directories.
# - To create/reset local users, use:
#   ./gradlew :backend:run --args="create-user --db-path $DB_PATH"
#   ./gradlew :backend:run --args="change-password --db-path $DB_PATH"
