{
  "name": "social-publish",
  "scripts": {
    "init": "npm --prefix ./frontend/ install",
    "dev": "npm run init && concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
    "dev:backend": "cd ./backend && ./sbt -Dsbt.supershell=false ~run",
    "dev:frontend": "npm --prefix ./frontend/ run dev",
    "build": "npm run init && npm run clean && npm --prefix ./frontend/ run build && cd ./backend && ./sbt -Dsbt.supershell=false assembly",
    "clean": "cd ./backend && ./sbt clean && cd .. && npm --prefix ./frontend/ run clean",
    "format": "prettier . --write",
    "lint": "eslint . -f unix"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/alexandru/social-publish.git"
  },
  "author": "Alexandru Nedelcu",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/alexandru/social-publish/issues"
  },
  "homepage": "https://github.com/alexandru/social-publish#readme",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.50.0",
    "@typescript-eslint/parser": "^8.50.0",
    "concurrently": "^9.2.1",
    "eslint": "^9.39.2",
    "eslint-plugin-react": "^7.37.5",
    "prettier": "^3.7.4"
  }
}
